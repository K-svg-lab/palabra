// Prisma schema for Palabra backend database
// This schema supports multi-user authentication and cloud synchronization

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// AUTHENTICATION MODELS (NextAuth.js compatible)
// ============================================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials login (hashed)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  vocabulary    VocabularyItem[]
  reviews       Review[]
  studySessions StudySession[]
  dailyStats    DailyStats[]
  settings      UserSettings?
  tags          Tag[]
  syncLog       SyncLog[]
  vocabularyVerifications VocabularyVerification[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// VOCABULARY & LEARNING DATA
// ============================================================================

model VocabularyItem {
  id                String   @id @default(cuid())
  userId            String
  
  // Core vocabulary data
  spanish           String
  english           String
  partOfSpeech      String?
  gender            String?
  level             String   @default("beginner")
  
  // Additional information
  examples          Json?    // Array of example objects
  notes             String?  @db.Text
  images            Json?    // Array of image URLs
  audio             Json?    // Audio file references
  synonyms          Json?    // Array of synonyms
  antonyms          Json?    // Array of antonyms
  relatedWords      Json?    // Array of related words
  conjugations      Json?    // Verb conjugation table
  
  // Learning progress
  status            String   @default("new") // new, learning, mastered
  difficulty        Float    @default(0)
  easeFactor        Float    @default(2.5)
  interval          Int      @default(0)
  repetitions       Int      @default(0)
  lastReviewDate    DateTime?
  nextReviewDate    DateTime?
  
  // Metadata
  source            String?  // Where the word came from
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Sync metadata
  version           Int      @default(1)
  lastSyncedAt      DateTime @default(now())
  isDeleted         Boolean  @default(false)
  
  // Relations
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews           Review[]
  tags              Tag[]    @relation("VocabularyTags")
  
  @@index([userId])
  @@index([userId, status])
  @@index([userId, nextReviewDate])
  @@index([userId, createdAt])
  @@index([lastSyncedAt])
}

model Review {
  id              String         @id @default(cuid())
  userId          String
  vocabularyId    String
  sessionId       String?
  
  // Review details
  reviewType      String         // recognition, recall, listening
  direction       String         @default("spanish-english")
  quality         Int            // 0-5 (Forgot to Easy)
  timeSpent       Int            // milliseconds
  correct         Boolean
  
  // Context
  reviewDate      DateTime       @default(now())
  difficulty      Float          // Difficulty at time of review
  interval        Int            // Interval at time of review
  
  // Sync metadata
  version         Int            @default(1)
  lastSyncedAt    DateTime       @default(now())
  isDeleted       Boolean        @default(false)
  
  // Relations
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  vocabulary      VocabularyItem @relation(fields: [vocabularyId], references: [id], onDelete: Cascade)
  session         StudySession?  @relation(fields: [sessionId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([vocabularyId])
  @@index([sessionId])
  @@index([reviewDate])
  @@index([lastSyncedAt])
}

model StudySession {
  id              String   @id @default(cuid())
  userId          String
  
  // Session details
  sessionType     String   // review, practice, custom
  cardsStudied    Int      @default(0)
  accuracy        Float    @default(0)
  totalTime       Int      @default(0) // milliseconds
  
  // Configuration
  config          Json?    // Session configuration
  
  // Timestamps
  startedAt       DateTime @default(now())
  completedAt     DateTime?
  
  // Sync metadata
  version         Int      @default(1)
  lastSyncedAt    DateTime @default(now())
  isDeleted       Boolean  @default(false)
  
  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews         Review[]
  
  @@index([userId])
  @@index([startedAt])
  @@index([lastSyncedAt])
}

model DailyStats {
  id                String   @id @default(cuid())
  userId            String
  date              DateTime @db.Date
  
  // Activity metrics
  wordsAdded        Int      @default(0)
  cardsReviewed     Int      @default(0)
  correctReviews    Int      @default(0)
  studyTime         Int      @default(0) // milliseconds
  sessionsCompleted Int      @default(0)
  
  // Progress metrics
  newWordsLearned   Int      @default(0)
  wordsMastered     Int      @default(0)
  
  // Streak tracking
  isActive          Boolean  @default(false)
  streakDay         Int      @default(0)
  
  // Sync metadata
  version           Int      @default(1)
  lastSyncedAt      DateTime @default(now())
  isDeleted         Boolean  @default(false)
  updatedAt         DateTime @default(now()) @updatedAt
  
  // Relations
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
  @@index([userId])
  @@index([date])
  @@index([lastSyncedAt])
}

model Tag {
  id            String           @id @default(cuid())
  userId        String
  name          String
  color         String?
  description   String?
  
  // Metadata
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  
  // Sync metadata
  version       Int              @default(1)
  lastSyncedAt  DateTime         @default(now())
  isDeleted     Boolean          @default(false)
  
  // Relations
  user          User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  vocabulary    VocabularyItem[] @relation("VocabularyTags")
  
  @@unique([userId, name])
  @@index([userId])
  @@index([lastSyncedAt])
}

model UserSettings {
  id                        String   @id @default(cuid())
  userId                    String   @unique
  
  // Review settings
  dailyGoal                 Int      @default(20)
  reviewMode                String   @default("mixed")
  autoPlayAudio             Boolean  @default(true)
  
  // Notification settings
  notificationsEnabled      Boolean  @default(false)
  notificationTime          String?  // HH:MM format
  quietHoursStart           String?
  quietHoursEnd             String?
  
  // Display settings
  theme                     String   @default("system")
  language                  String   @default("en")
  fontSize                  String   @default("medium")
  
  // Advanced settings
  spacedRepetitionAlgorithm String   @default("sm2")
  showGenderColors          Boolean  @default(true)
  showPartOfSpeech          Boolean  @default(true)
  
  // Sync settings
  autoSync                  Boolean  @default(true)
  syncFrequency             Int      @default(5) // minutes
  
  // Metadata
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
  
  // Relations
  user                      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

// ============================================================================
// SYNC & SYSTEM MODELS
// ============================================================================

model SyncLog {
  id              String   @id @default(cuid())
  userId          String
  
  // Sync details
  syncType        String   // full, incremental
  direction       String   // upload, download, bidirectional
  status          String   // pending, in_progress, completed, failed
  
  // Statistics
  itemsSynced     Int      @default(0)
  conflictsFound  Int      @default(0)
  conflictsResolved Int    @default(0)
  errors          Json?
  
  // Timestamps
  startedAt       DateTime @default(now())
  completedAt     DateTime?
  
  // Device info
  deviceId        String?
  deviceName      String?
  appVersion      String?
  
  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([startedAt])
  @@index([status])
}

model DeviceInfo {
  id            String   @id @default(cuid())
  userId        String
  
  // Device details
  deviceId      String   @unique
  deviceName    String
  deviceType    String   // mobile, tablet, desktop
  platform      String   // iOS, Android, Windows, macOS, Linux
  browser       String?
  
  // Last activity
  lastActiveAt  DateTime @default(now())
  lastSyncAt    DateTime?
  appVersion    String?
  
  // Metadata
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([userId])
  @@index([deviceId])
  @@index([lastActiveAt])
}

// ============================================================================
// VERIFIED VOCABULARY CACHE (Phase 16)
// Multi-language proprietary verified vocabulary database
// ============================================================================

model VerifiedVocabulary {
  id                      String   @id @default(cuid())
  
  // üåç MULTI-LANGUAGE SUPPORT (language-agnostic design)
  sourceLanguage          String   // ISO 639-1 code: "es", "de", "fr", "ja", etc.
  targetLanguage          String   // ISO 639-1 code: "en", "es", etc.
  languagePair            String   // Composite: "es-en", "de-en", etc. (indexed for fast lookup)
  
  // Core data (canonical form)
  sourceWord              String   // Original word (Spanish, German, French, etc.)
  targetWord              String   // Translation (English, Spanish, etc.)
  alternativeTranslations Json?    @db.JsonB // string[] - alternative target translations
  partOfSpeech            String?  // Universal: "noun", "verb", "adjective", etc.
  
  // Language-specific metadata (stored as JSON for flexibility)
  // Spanish: { gender: "masculine", plural: "perros" }
  // German: { article: "der", case: "nominative", plural: "Hunde" }
  // Japanese: { kanji: "Áä¨", hiragana: "„ÅÑ„Å¨", formality: "casual" }
  grammarMetadata         Json?    @db.JsonB
  
  // Rich metadata
  examples                Json?    @db.JsonB // ExampleSentence[]
  conjugations            Json?    @db.JsonB // VerbConjugation
  synonyms                Json?    @db.JsonB // string[]
  antonyms                Json?    @db.JsonB // string[]
  relatedWords            Json?    @db.JsonB // string[]
  regionalVariants        Json?    @db.JsonB // { region: string, alternatives: string[] }[]
  
  // Verification metadata
  verificationCount       Int      @default(1)
  confidenceScore         Float    @default(0.0)
  lastVerified            DateTime @default(now())
  
  // Source tracking
  primarySource           String   // "deepl" | "mymemory" | "wiktionary" | "user"
  apiSources              Json?    @db.JsonB // { source: string, data: any }[]
  
  // Quality flags
  hasDisagreement         Boolean  @default(false)
  disagreementCount       Int      @default(0)
  requiresReview          Boolean  @default(false)
  isOffensive             Boolean  @default(false)
  
  // Usage statistics
  lookupCount             Int      @default(0)
  saveCount               Int      @default(0)
  editFrequency           Float    @default(0.0)
  avgReviewSuccessRate    Float    @default(0.0)
  
  // Metadata
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  lastRefreshedAt         DateTime @default(now())
  
  // Legacy fields for backward compatibility (Spanish-specific)
  // These will be deprecated once we migrate to multi-language structure
  spanish                 String?  
  english                 String?
  gender                  String?
  
  // Relations
  verifications           VocabularyVerification[]
  
  // Indexes for performance
  @@index([sourceWord, sourceLanguage, targetLanguage], name: "idx_word_lang_lookup") // Fast lookups
  @@index([languagePair, sourceWord], name: "idx_lang_pair_word")                     // Fast language-pair queries
  @@index([verificationCount], name: "idx_verification_count")
  @@index([confidenceScore], name: "idx_confidence_score")
  @@index([lastVerified], name: "idx_last_verified")
  @@index([requiresReview], name: "idx_requires_review")
  @@index([spanish], name: "idx_spanish_legacy")                                      // Legacy Spanish index
  
  // Unique constraint: one entry per word per language pair
  @@unique([sourceWord, languagePair], name: "unique_word_lang_pair")
}

model VocabularyVerification {
  id                String   @id @default(cuid())
  userId            String
  verifiedWordId    String
  
  // üåç Language context
  sourceLanguage    String   // "es", "de", "fr", etc.
  targetLanguage    String   // "en", "es", etc.
  
  // What the API returned vs what user saved (language-agnostic)
  apiTranslation    String
  userTranslation   String
  apiPOS            String?
  userPOS           String?
  apiGrammarData    Json?    @db.JsonB // Language-specific metadata from API
  userGrammarData   Json?    @db.JsonB // Language-specific metadata from user
  apiExamples       Json?    @db.JsonB
  userExamples      Json?    @db.JsonB
  
  // Verification signals
  wasEdited         Boolean
  editedFields      Json?    @db.JsonB // string[] - which fields were changed
  reviewCount       Int      @default(0)
  reviewSuccessRate Float    @default(0.0)
  lastReviewed      DateTime?
  
  // Context
  lookupSource      String?  // "manual" | "import" | "voice"
  deviceType        String?  // "mobile" | "desktop" | "tablet"
  
  // Metadata
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  // Relations
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  verifiedWord      VerifiedVocabulary @relation(fields: [verifiedWordId], references: [id], onDelete: Cascade)
  
  @@index([verifiedWordId], name: "idx_verified_word")
  @@index([userId], name: "idx_user_verification")
  @@index([wasEdited], name: "idx_was_edited")
  @@index([createdAt], name: "idx_verification_created")
  @@index([sourceLanguage, targetLanguage], name: "idx_verification_lang")
}

// ============================================================================
// ANALYTICS & OBSERVABILITY (Phase 16.2)
// Track word lookups, API usage, cache performance, and user behavior
// ============================================================================

model WordLookupEvent {
  id                String   @id @default(cuid())
  
  // Word context
  sourceWord        String
  sourceLanguage    String   // "es", "de", "fr", etc.
  targetLanguage    String   // "en", "es", etc.
  languagePair      String   // "es-en", "de-en", etc.
  
  // Lookup result
  fromCache         Boolean  @default(false)
  cacheHit          Boolean  @default(false) // Whether word was in cache
  cacheMiss         Boolean  @default(false) // Whether had to fetch from API
  apiSource         String?  // "deepl" | "mymemory" | "wiktionary" | null (if cache)
  
  // Performance metrics
  responseTime      Int      // milliseconds
  apiCallsCount     Int      @default(0) // Number of API calls made
  
  // Result quality
  translationFound  Boolean  @default(true)
  examplesFound     Int      @default(0)
  confidenceScore   Float?   // Confidence of translation
  
  // User context (optional)
  userId            String?
  sessionId         String?
  deviceType        String?  // "mobile" | "desktop" | "tablet"
  
  // Outcome
  wasSaved          Boolean  @default(false)
  wasEdited         Boolean  @default(false)
  
  // Timestamp
  createdAt         DateTime @default(now())
  
  @@index([sourceWord, languagePair], name: "idx_lookup_word_lang")
  @@index([fromCache], name: "idx_lookup_cache")
  @@index([createdAt], name: "idx_lookup_created")
  @@index([userId], name: "idx_lookup_user")
  @@index([apiSource], name: "idx_lookup_api_source")
}

model ApiCallEvent {
  id                String   @id @default(cuid())
  
  // API details
  apiName           String   // "deepl" | "mymemory" | "wiktionary" | "tatoeba" | etc.
  endpoint          String?  // Specific endpoint called
  method            String   @default("GET") // HTTP method
  
  // Request context
  sourceWord        String
  languagePair      String
  
  // Performance
  responseTime      Int      // milliseconds
  success           Boolean
  statusCode        Int?
  errorMessage      String?  @db.Text
  
  // Rate limiting
  rateLimited       Boolean  @default(false)
  retryCount        Int      @default(0)
  
  // Usage tracking
  requestSize       Int?     // bytes
  responseSize      Int?     // bytes
  
  // Result quality
  translationReturned Boolean @default(false)
  examplesReturned    Int     @default(0)
  
  // Metadata
  createdAt         DateTime @default(now())
  userId            String?
  sessionId         String?
  
  @@index([apiName], name: "idx_api_name")
  @@index([success], name: "idx_api_success")
  @@index([createdAt], name: "idx_api_created")
  @@index([responseTime], name: "idx_api_response_time")
  @@index([rateLimited], name: "idx_api_rate_limited")
}

model CachePerformanceMetrics {
  id                String   @id @default(cuid())
  date              DateTime @db.Date
  languagePair      String
  
  // Cache metrics
  totalLookups      Int      @default(0)
  cacheHits         Int      @default(0)
  cacheMisses       Int      @default(0)
  cacheHitRate      Float    @default(0.0) // cacheHits / totalLookups
  
  // Performance
  avgCacheResponseTime Int   @default(0)   // milliseconds
  avgApiResponseTime   Int   @default(0)   // milliseconds
  speedImprovement     Float @default(0.0) // How much faster cache is
  
  // API usage
  totalApiCalls     Int      @default(0)
  apiCallsSaved     Int      @default(0) // API calls avoided due to cache
  
  // Quality
  avgConfidence     Float    @default(0.0)
  verifiedWords     Int      @default(0)
  
  // User behavior
  saveRate          Float    @default(0.0) // % of lookups that were saved
  editRate          Float    @default(0.0) // % of saves that were edited
  
  // Metadata
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@unique([date, languagePair], name: "unique_date_lang_pair")
  @@index([date], name: "idx_cache_metrics_date")
  @@index([languagePair], name: "idx_cache_metrics_lang")
  @@index([cacheHitRate], name: "idx_cache_hit_rate")
}

model PopularWord {
  id                String   @id @default(cuid())
  
  // Word details
  sourceWord        String
  sourceLanguage    String
  targetLanguage    String
  languagePair      String
  translation       String
  
  // Popularity metrics
  lookupCount       Int      @default(0)
  saveCount         Int      @default(0)
  saveRate          Float    @default(0.0) // saveCount / lookupCount
  
  // Time range
  period            String   // "daily" | "weekly" | "monthly" | "all_time"
  periodStart       DateTime
  periodEnd         DateTime
  
  // Quality signals
  avgConfidence     Float    @default(0.0)
  editFrequency     Float    @default(0.0)
  
  // Cache status
  isInCache         Boolean  @default(false)
  shouldCache       Boolean  @default(false) // Based on popularity
  
  // Rankings
  rank              Int?
  
  // Metadata
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@unique([sourceWord, languagePair, period, periodStart], name: "unique_popular_word")
  @@index([languagePair, period], name: "idx_popular_word_period")
  @@index([lookupCount], name: "idx_popular_lookup_count")
  @@index([periodStart], name: "idx_popular_period_start")
}

