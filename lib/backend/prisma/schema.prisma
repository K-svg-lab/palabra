  @@index([day1Active], name: "idx_cohort_day1")
  @@index([day7Active], name: "idx_cohort_day7")
  @@index([day30Active], name: "idx_cohort_day30")
  @@index([day90Active], name: "idx_cohort_day90")
  @@index([lastActiveAt], name: "idx_cohort_last_active")
  @@index([experimentGroup], name: "idx_cohort_experiment")
}

// ============================================================================
// INTERFERENCE DETECTION (Phase 18.2.1)
// Track confused word pairs and comparative review effectiveness
// ============================================================================

model ConfusionPair {
  id        String   @id @default(cuid())
  userId    String
  word1Id   String
  word2Id   String
  
  // Tracking
  confusionCount   Int      @default(1)
  lastConfusion    DateTime
  comparativeCount Int      @default(0) // How many comparative reviews done
  lastComparative  DateTime?
  resolved         Boolean  @default(false)
  resolvedAt       DateTime?
  
  // Performance after intervention
  word1Accuracy    Float?   // Accuracy after comparative review
  word2Accuracy    Float?
  
  // Metadata
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  
  // Relations
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, word1Id, word2Id])
  @@index([userId])
  @@index([resolved])
  @@index([confusionCount])
  @@index([lastConfusion])
}

// ============================================================================
// DEEP LEARNING MODE (Phase 18.2.2)
// Elaborative interrogation prompts for deeper processing
// ============================================================================

model ElaborativePromptCache {
  id            String   @id @default(cuid())
  word          String
  level         String   // CEFR level: A1, A2, B1, B2, C1, C2
  
  // Prompt content
  promptType    String   // 'etymology' | 'connection' | 'usage' | 'comparison' | 'personal'
  question      String   @db.Text
  hints         Json?    @db.JsonB // string[] - optional hints
  idealAnswer   String?  @db.Text  // optional ideal answer
  
  // Usage tracking
  useCount      Int      @default(0)
  
  // Metadata
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@unique([word, level])
  @@index([word])
  @@index([level])
  @@index([useCount])
}

model ElaborativeResponse {
  id            String   @id @default(cuid())
  userId        String
  wordId        String
  
  // Prompt details
  promptType    String   // 'etymology' | 'connection' | 'usage' | 'comparison' | 'personal'
  question      String   @db.Text
  
  // Response tracking
  userResponse  String?  @db.Text  // null if skipped
  skipped       Boolean  @default(false)
  responseTime  Int      // milliseconds
  
  // Metadata
  createdAt     DateTime @default(now())
  
  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([wordId])
  @@index([skipped])
  @@index([createdAt])
}

// ============================================================================
// MONETIZATION & SUBSCRIPTIONS (Phase 18.3.1)
// Stripe-powered subscription management
// ============================================================================

model Subscription {
  id     String @id @default(cuid())
  userId String
  
  // Stripe details
  stripeSubscriptionId     String   @unique
  stripePriceId            String
  stripeCurrentPeriodStart DateTime
  stripeCurrentPeriodEnd   DateTime
  
  // Status
  status   String // "active", "canceled", "past_due", "unpaid", "incomplete"
  tier     String // "premium" (future: "pro")
  
  // Pricing
  amount   Float  // $4.99 or $39.99
  currency String @default("usd")
  interval String // "month" or "year"
  
  // Lifecycle
  canceledAt    DateTime?
  cancelReason  String?   @db.Text
  cancelAtEnd   Boolean   @default(false) // Whether to cancel at period end
  
  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
  @@index([stripeCurrentPeriodEnd])
}

model Payment {
  id     String @id @default(cuid())
  userId String
  
  // Stripe
  stripePaymentIntentId String  @unique
  stripeInvoiceId       String?
  stripeChargeId        String?
  
  // Details
  amount      Float
  currency    String  @default("usd")
  type        String // "subscription", "lifetime", "refund"
  status      String // "succeeded", "failed", "refunded"
  
  // Subscription reference (for recurring payments)
  subscriptionId String?
  
  // Metadata
  description String?  @db.Text
  receiptUrl  String?  @db.Text
  failureCode String? // Stripe failure code
  failureMessage String? @db.Text
  
  // Timestamps
  createdAt DateTime @default(now())
  paidAt    DateTime?
  refundedAt DateTime?
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
  @@index([type])
  @@index([createdAt])
  @@index([subscriptionId])
}
