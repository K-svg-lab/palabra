# Palabra Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://..."

# ============================================================================
# AUTHENTICATION (NextAuth.js)
# ============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"  # Generate: openssl rand -base64 32

# ============================================================================
# STRIPE (Phase 18.3.1 - Monetization)
# ============================================================================

# Stripe API Keys
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_..."  # Use sk_live_... for production
STRIPE_PUBLISHABLE_KEY="pk_test_..."  # Use pk_live_... for production

# Stripe Webhook Secret
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs
# Create products and prices in Stripe Dashboard
# Monthly Premium: $4.99/month
STRIPE_PRICE_PREMIUM_MONTHLY="price_..."

# Yearly Premium: $39.99/year
STRIPE_PRICE_PREMIUM_YEARLY="price_..."

# Lifetime: $79.99 one-time
STRIPE_PRICE_LIFETIME="price_..."

# ============================================================================
# AI SERVICES (Phase 18.1.3)
# ============================================================================

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Monthly AI Budget (in USD)
MONTHLY_AI_BUDGET="2500"

# ============================================================================
# OPTIONAL SERVICES
# ============================================================================

# DeepL Translation API (for higher quality translations)
# Get from: https://www.deepl.com/pro-api
NEXT_PUBLIC_DEEPL_API_KEY="your-deepl-key:fx"

# Vercel Analytics (if using Vercel)
# Automatically configured by Vercel

# ============================================================================
# ADMIN
# ============================================================================

# Admin email for cost alerts and notifications
ADMIN_EMAIL="admin@palabra.app"
ADMIN_PHONE="+1234567890"  # Optional, for SMS alerts

# Cron secret for scheduled jobs
CRON_SECRET="your-random-secret"  # Generate: openssl rand -base64 32
